<div class="white-pink">

<h1>Venues </h1>
<table class="table table-hover">

    <% current_user.venues.group(:name).each do |venue| %>
        <tr><td><b><%= "Venue" %></b></td>
            <td><b><%= "Location" %></b></td>
        </tr>
        
        <tr>
        <td><%= link_to venue.name, venue_events_path(:venue_id => venue.id, :user_id =>current_user.id,:user=>params[:user]) %></td>
        <td><%= venue.address %><%= venue.city %><%= venue.state %></td>
        </tr>
    <% end %>

</table>
    <% if current_user.venues.all.size==0 %>
        <em>No Venues found</em>
    <% end %>

</div>