<div class="white-pink">
<h1>Events held for <%=current_user.name%> </h1>
<table>
    
    <tr>

        <% if @events.size==0 %>

            <em>No Events found</em>

        <% else %>
            
            <td><b><%= "Name" %></b></td>
            <td><b><%= "Date" %></b></td>
            <td><b><%= "Time" %></b></td>
    </tr>

            <% @events.each do |e| %> 
            <tr> 

                <td><%= e.events.name %> </td> 
                <td><%= e.events.date.strftime("%b %d, %Y") %></td> 
                <td><%= e.events.time.strftime("%I:%Mp") %></td>  
            </tr> 
        <% end %>
             
    <% end %>

</table>
</div>