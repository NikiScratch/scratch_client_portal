<div class="white-pink">

<h1>Venues (eventvenue index)</h1>

    <% current_user.venues.group(:name).each do |venue| %>
        <%= link_to venue.name, venue_events_path(:venue_id => venue.id, :user_id =>current_user.id,:user=>params[:user]) %><p>
        
    <% end %>

    <% if current_user.venues.all.size==0 %>
        <em>No Venues found</em>
    <% end %>

</div>