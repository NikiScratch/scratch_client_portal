<div class="white-pink">
<h1>Upcoming Events for <%=current_user.name%> </h1>

<table class="table table-hover">
     <tr>
        <% if @events.size==0 %>

            <em>No Events found</em>

        <% else %>
   
            <td><b><%= "Name" %></b> </td>
            <td><b><%= "Date" %></b></td>
            <td><b><%= "Time" %></b></td>
            <td><b><%= "Location" %></b></td>
       
                <% @events.each do |event| %>
                    <tr>
                        <td><%= event.name%> </td>
                        <td><%= event.date.strftime("%b %d, %Y") %></td>
                        <td><%= event.time.strftime("%I:%Mp") %></td>
                        <td><%= event.venue.address %><%= event.venue.city %><%= event.venue.state %></td>
                        <td></td>
                    </tr>

                <% end %>
        <% end %>
</table>

</div>